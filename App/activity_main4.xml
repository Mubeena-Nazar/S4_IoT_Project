<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:foregroundTint="#03A9F4"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:textColor="#C12222"
        android:textStyle="bold"
        android:text="Configuration"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/config_img_1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/idea11" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/config_r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="radioHandle"
                android:text="Obstacle Detection"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/config_r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioHandle"
                android:text="Staircase Detection"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/config_r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioHandle"
                android:text="Pothole Detection"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />


            <RadioButton
                android:id="@+id/config_r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioHandle"
                android:text="Water Detection"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/config_r5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioHandle"
                android:text="Fire Detection"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />
        </RadioGroup>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/config_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CONFIRM"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </TableRow>

    </TableLayout>
</LinearLayout>
